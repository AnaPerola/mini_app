<% task.errors.full_messages.each do |error| %> 
  <p><%= error %></p> 
<% end %>

<%= form_with model: task do |f| %>

  <div class='col-lg-12' style='text-align: right;'>
    <%= link_to 'Go Back', tasks_path, class:'btn btn-outline-danger' %>
  </div>

  <div class='form-group p-1'>
    <%= f.label(:title, 'Title:')%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
   <div class='form-group p-1'>
    <%= f.label(:description, 'Description:') %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
   <div class='form-group p-1'>
    <%= f.label(:status, 'Status') %>
    <%= f.select :status, ['incomplete', 'complete'] %>

    <%= f.label(:priority, 'Priority') %>
    <%= f.select :priority, ['low', 'medium', 'high'] %>

    <%= f.label(:share, 'Share') %>
    <%= f.select(:share, [['Public', true], ['Private', false]]) %> 
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary ml-2' %>
  </div>
<% end %>